<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mavbraz.barbermobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.SingupActivity" />
        <activity android:name=".view.ListServicoActivity" />

        <provider
            android:name=".view.BarberProvider"
            android:authorities="com.github.mavbraz.barbermobile"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".view.FazerAgendamentoActivity"></activity>
    </application>

</manifest>